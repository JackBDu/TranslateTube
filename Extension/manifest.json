{
	"manifest_version": 2,
  "name": "Translate Tube",
  "version": "0.1",

  "description": "Multilingual video playback for YouTube.",
  "icons": {
    "128": "assets/icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "assets/icons/icon.png",
    "default_title": "Translate Tube"
  },

  "background": {
    "persistent": true,
    "scripts": ["script/background.js"]
  },

  "web_accessible_resources": [
    "microphone.html",
  	"css/microphone.css",
  	"assets/*"
  ],

  "permissions": [
    "tabs",
    "https://www.youtube.com/*"
  ],

  "commands": {
  	"_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+T",
        "mac": "Alt+T",
        "chromeos": "Alt+T",
        "linux": "Alt+T"
      }
    }
  },

  "author": "kcaluru",
  "content_security_policy": "script-src 'self' https://connect.soundcloud.com; object-src 'self'"  
}
